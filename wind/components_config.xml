<?xml version="1.0" encoding="UTF-8"?>

<!-- <component name='' path='' factory-method='' init-method='' scope="singleton/prototype/request/session/application" 
	proxy=''> -->
<!-- <property property-name='' ref/value=''> -->
<!-- <constructor-arg ref/value=''> -->
<!-- <config resource=''> -->
<!-- </component> -->

<components>
	<!-- app -->
	<component name='windWebApp' path='WIND:core.web.WindWebApplication'
		scope='request'>
		<properties>
			<property name='errorHandler' ref='errorHandler' />
			<property name='dispatcher' ref='dispatcher' />
		</properties>
	</component>
	<component name='errorHandler' path='WIND:core.web.WindErrorHandler'
		scope='prototype'>
	</component>
	<component name='dispatcher' path='WIND:core.web.WindDispatcher'
		scope='prototype'>
	</component>

	<!-- logger -->
	<component name='windLogger' path='WIND:component.log.WindLogger'
		scope='request'>
	</component>

	<!-- forward -->
	<component name='forward' path='WIND:core.web.WindForward'
		scope='prototype'>
	</component>

	<!-- urlBasedRouter -->
	<component name='urlBasedRouter' path='WIND:core.router.WindUrlBasedRouter'
		scope="application">
		<config resource='WIND:core.router.router_config' suffix='xml' />
	</component>
	<component name='urlHelper' path='WIND:core.web.WindUrlHelper'
		scope='singleton'>
		<properties>
			<property name='windRouter' ref='urlBasedRouter' />
		</properties>
		<config>
			<url-pattern value="/"/>
			<route-suffix value='htm' />
			<route-param value='' />
		</config>
	</component>

	<!-- windView -->
	<component name='windView' path='WIND:core.viewer.WindView'
		scope='prototype'>
		<!--<config resource='WIND:core.viewer.view_config' suffix='xml' /> -->
		<config>
			<template-dir value='template' />
			<template-ext value='htm' />
			<share-var value='false' />
			<is-cache value='true' />
			<cache-dir value='cache' />
			<compile-dir value='compile.template' />
		</config>
		<properties>
			<property name='viewResolver' ref='viewResolver' />
		</properties>
	</component>
	<component name='viewResolver' path='WIND:core.viewer.WindViewerResolver'
		scope='prototype' hidden-pro='false'>
		<properties>
			<property name='windTemplate' ref='template' />
		</properties>
	</component>
	<component name='template' path='WIND:core.viewer.WindViewTemplate'
		scope='prototype' hidden-pro='false'>
		<config resource='WIND:core.viewer.viewTemplateConfig' suffix='xml' />
	</component>
	
</components>
