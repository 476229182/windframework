<?xml version="1.0" encoding="UTF-8"?>
<WIND>
	<!-- import external config source file -->
	<imports>
		<import name='components' resource='WIND:config.components_config'
			suffix='xml' init-delay='false' is-append='true' />
	</imports>


	<!-- web application definitions, you can define application more than one. -->
	<web-apps>
		<web-app name='default' class='windWebApp' root-path=''>
			<factory class-definition='components'
				class='WIND:core.factory.WindComponentFactory' />
			<filters class='WIND:core.filter.WindFilterChain'>
				<filter name='filter1' class='WIND:core.web.filter.WindLoggerFilter' />
				<filter name='filter2' class='WIND:core.web.filter.WindUrlFilter' />
			</filters>
			<router class='urlBasedRouter' />
			<modules>
				<module name='default' path='actionControllers'>
					<controller-suffix value='Controller' />
					<view class='windView' />
				</module>
			</modules>
		</web-app>
	</web-apps>

</WIND>