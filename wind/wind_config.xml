<?xml version="1.0" encoding="UTF-8"?>
<WIND>
	<rootPath></rootPath>
	<applications>
		<application name='web'>
			<class>WIND:core.WindWebApplication</class>
		</application>
		<application name='command'>
			<class>WIND:core.WindCommandApplication</class>
		</application>
	</applications>
	<modules>
		<module name='default'>
			<path>actionControllers</path>
			<template>default</template>
			<controllerSuffix>controller</controllerSuffix>
			<actionSuffix>action</actionSuffix>
			<method>run</method>
		</module>
		<module name='other'>
			<path>otherControllers</path>
			<template>wind</template>
			<controllerSuffix>controller</controllerSuffix>
			<actionSuffix>action</actionSuffix>
			<method>run</method>
		</module>
	</modules>
	<error isMerge='true'>
		<errorAction name='default'>
			<class>WIND:core.WindErrorAction</class>
		</errorAction>
	</error>
	<filters isMerge='true'>
		<filter name="WindFormFilter">
			<class>WIND:component.form.WindFormFilter</class>
		</filter>
	</filters>
	<templates>
		<template name='default'>
			<dir>template</dir>
			<default>index</default>
			<ext>htm</ext>
			<resolver>default</resolver>
			<isCache>false</isCache>
			<cacheDir>cache</cacheDir>
			<compileDir>compile</compileDir>
		</template>
		<template name='wind'>
			<dir>template</dir>
			<default>index</default>
			<ext>htm</ext>
			<resolver>default</resolver>
			<isCache>false</isCache>
			<cacheDir>cache</cacheDir>
			<compileDir>compile</compileDir>
		</template>
	</templates>
	<viewerResolvers isMerge='true'>
		<resolver name='default'>
			<class>WIND:core.viewer.WindViewer</class>
		</resolver>
	</viewerResolvers>
	<router>
		<parser>url</parser>
	</router>
	<routerParsers isMerge='true'>
		<parser name='url'>
			<rule>
				<action name='a'>run</action>
				<controller name='c'>index</controller>
				<module name='m'>default</module>
			</rule>
			<class>WIND:core.router.WindUrlBasedRouter</class>
		</parser>
	</routerParsers>
	<extensionConfig>
		<config name='formConfig'>WIND:component.form.form_config</config>
		<config name='dbConfig'>WIND:component.form.db_config</config>
	</extensionConfig>
</WIND>