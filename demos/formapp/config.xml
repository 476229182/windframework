<?xml version="1.0" encoding="UTF-8"?>
<WIND>
<!-- import external config source file -->
	<imports>
		<import name='components' resource='WIND:components_config'
			suffix='xml' init-delay='false' is-append='true' />
	</imports>
	
	<web-apps>
		<web-app name='formdemo' class='windWebApp' root-path=''>
			<factory class-definition='components'
				class='WIND:core.factory.WindComponentFactory' />
			<filters class='WIND:core.filter.WindFilterChain'>
				<filter name='filter1' class='WIND:core.web.filter.WindLoggerFilter' />
			</filters>
			<router class='urlBasedRouter' />
			<modules>
				<module name='default' path='controllers'>
					<controller-suffix value='Controller' />
					<view class='windView'>
						<config>
							<template-dir value='templates' />
							<template-ext value='html' />
							<share-var value='false' />
							<is-cache value='true' />
							<cache-dir value='cache' />
							<compile-dir value='compile.template' />
						</config>
					</view>
				</module>
				<module name='other' path='otherControllers'>
					<controller-suffix value='Controller' />
					<view class='windView'>
						<config>
							<template-dir value='templates' />
							<template-ext value='html' />
							<share-var value='false' />
							<is-cache value='true' />
							<cache-dir value='cache' />
							<compile-dir value='compile.template' />
						</config>
					</view>
				</module>
			</modules>
		</web-app>
	</web-apps>
</WIND>