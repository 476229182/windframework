<?xml version="1.0" encoding="UTF-8" ?>
<!-- 
=======================================================================================
======================DB缓存配置=========================================================
=======================================================================================
-->
<!-- 数据库缓存的配置信息 -->
<WIND>
	<!-- 缓存文件的过期时间 -->
	<expires>0</expires>
	<!-- 缓存key的前缀 -->
	<key-prefix></key-prefix>
	<!-- 缓存key安全盐码 -->
	<security-code></security-code>
	<!-- db链接配置名字 -->
	<dbconfig-name></dbconfig-name>
	<!-- 缓存的表名 -->
	<table-name>pw_cache</table-name>
	<!-- 缓存的key字段名称 -->
	<field-key>key</field-key>
	<!-- 缓存的value字段名称 -->
	<field-value>value</field-value>
	<!-- 缓存的过期时间字段名称 -->
	<field-expire>expire</field-expire>
</WIND>

<!-- 
=======================================================================================
======================File缓存配置======================================================
=======================================================================================
-->
<!-- 文件缓存配置 -->
<WIND>
	<!-- 缓存文件的过期时间 -->
	<expires>0</expires>
	<!-- 缓存key的前缀 -->
	<key-prefix></key-prefix>
	<!-- 缓存key安全盐码 -->
	<security-code></security-code>
	
	<!-- 缓存文件的保存路径（支持命名空间的方式配置该路径） -->
	<dir>WIND:_compile</dir>
	<!-- 缓存文件的后缀 -->
	<suffix>php</suffix>
	<!-- 缓存的目录支持级别 -->
	<dir-level>0</dir-level>
</WIND>


<!-- 
=======================================================================================
======================Memcache缓存配置==================================================
=======================================================================================
-->
<!-- memcache配置 -->
<WIND>
	<!-- 缓存文件的过期时间 -->
	<expires>0</expires>
	<!-- 缓存key的前缀 -->
	<key-prefix></key-prefix>
	<!-- 缓存key安全盐码 -->
	<security-code></security-code>
	
	<!-- 压缩的级次 -->
	<compress>2</compress>
   <!-- memcache服务器相关配置 可以配置多个-->
	<servers>
		<server name='phpwind'>
			<!-- memcache主机ip -->
			<host>127.0.0.1</host>
			<!-- memcache端口 -->
			<port>11211</port>
			<!-- 是否使用长连 -->
			<pconn>true</pconn>
			<!-- 为此服务器创建的桶的数量，用来控制此服务器被选中的权重 -->
			<weight>1</weight>
			<!-- 连接持续（超时）时间（单位秒） -->
			<timeout>15</timeout>
			<!-- 服务器连接失败时重试的间隔时间 -->
			<retry>15</retry>
			<!-- 控制此服务器是否可以被标记为在线状态 -->
			<status>true</status>
			<!-- 允许用户指定一个运行时发生错误后的回调函数 -->
			<fcallback></fcallback>
		</server>
		<server name='cac'>
			<host>127.0.0.1</host>
			<port>11212</port>
		</server>
	</servers>
</WIND>