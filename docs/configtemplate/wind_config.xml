<?xml version="1.0" encoding="UTF-8"?>
<WIND>
	<!-- web application definitions, you can define application more than one. -->
	<!-- 应用配置，如果是多个应用配置，则可以建立多组的web-app配置项只要以name属性区分 name: 指定应用的名字，该名字为引用入口中调用的时候指定的名字，W::application('name'); 
		class: 指定该应用的配置 root-path: 指定该应用的入口地址 -->
	<web-app name='default' class='windWebApp'>
		<filters class='WIND:core.filter.WindFilterChain'>
			<filter name='filter1' class='WIND:core.web.filter.WindLoggerFilter' />
			<filter name='filter2' class='WIND:core.web.filter.WindUrlFilter' />
		</filters>
		<!-- 路由的相关配置 class: 指定路由解析类配置 -->
		<router class="urlBasedRouter">
			<!-- 路由module/controller/action相关配置（使用url访问参数名称及缺省值） -->
			<config>
				<!-- module配置 -->
				<module url-param='m' default-value='default' />
				<!-- controller配置 -->
				<controller url-param='c' default-value='index' />
				<!-- action配置 -->
				<action url-param='a' default-value='run' />
			</config>
		</router>
		<!-- 模块配置： 可以通过设定多个<module></module>来设置多组模块配置，每组模块以name来相互区分 -->
		<modules>
			<!-- name: 模块的名字 path: 模块的路径（采用命名空间的方式) -->
			<module name='default'>
				<controller-path>controller</controller-path>
				<!-- 指定该模块下的controller的后缀格式 -->
				<controller-suffix>Controller</controller-suffix>
				<!-- 配置该模块的error处理的action controller类 -->
				<error-handler>WIND:core.web.WindErrorHandler</error-handler>
				<!-- 试图相关配置，config中配置可以根据自己的需要进行配置或是使用缺省 -->
				<view class='windView'>
					<!-- 可以在这里进行view的配置，该配置只会影响该module下的view行为，该配置可以设置也可以不设置 -->
					<config>
						<!-- 指定模板路径 -->
						<template-dir>template</template-dir>
						<!-- 指定模板后缀 -->
						<template-ext>htm</template-ext>
						<!-- 模板编译文件存放路径 -->
						<compile-dir>data.template</compile-dir>
					</config>
				</view>
			</module>
		</modules>
		<!-- db相关配置，如果设置了resource则系统会默认找到dbconnection resource指向的文件作为db配置信息 -->
		<db resource="db_config.xml">
			<connection name='conn1'>
				<class>COM:db.WindConnection</class>
				<dsn>mysql:host=localhost;dbname=test</dsn>
				<user>root</user>
				<pwd>root</pwd>
				<charset>utf8</charset>
				<tablePrefix>pw_</tablePrefix>
			</connection>
		</db>
	</web-app>
</WIND>