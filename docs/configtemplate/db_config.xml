<?xml version="1.0" encoding="UTF-8"?>
<!-- dbConfig的配置，可以配置多个链接，多个链接的时候必需指定每个链接的type类型是master/slave，当配置一个的时候可以不配置type项 -->
<connections>
	<connection name="myConnection">
		<driver>mysql</driver>
		<type>master</type>
		<host>localhost</host>
		<user>root</user>
		<password></password>
		<port>3306</port>
		<name>phpwind</name>
		<charset>utf8</charset>
	</connection>
	
</connections>
